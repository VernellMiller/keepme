        <a href="/games/<%=game._id %>/edit">e</a>
  
         <form action="/games/<%= game._id %>?_method=DELETE" method="POST">
          <input type="submit" value="sub out" />
        </form>
  
          <% }) %>

          
        </article>

        
      </Main>
      
      <article id="addGame">
  
        <a href="/new">Add Game</a>
  
      </article>
    
    


