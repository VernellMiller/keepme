  <body>

    <nav>
      
      <%- include('./partials/nav.ejs') %>

    </nav>

    <header>
      
    <h1>KEEPME</h1>

    </header>
    
    <div id="bg"></div>
    
    <h1 class="title">WHAT A DAY!</h1>

    <Main>
      

      <article id="days">
        <p style="margin: -10px 0 50px 60px;">date</p>
        <h1>Tuesday</h1>
      </article>

      <article id="days">
        <p style="margin: -10px 0 50px 95px;">date</p>
